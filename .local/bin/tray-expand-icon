#!/usr/bin/env bash
#
# Waybar custom module: Shows expand icon when system tray has items

set -euo pipefail

# Function to check the tray and output JSON
check_tray() {
    local entries
    entries=$(busctl --user get-property org.kde.StatusNotifierWatcher /StatusNotifierWatcher org.kde.StatusNotifierWatcher RegisteredStatusNotifierItems 2>/dev/null) || entries=""
    
    if [[ "$entries" == *"as 0"* ]] || [[ -z "$entries" ]]; then
        printf '{"text": "", "tooltip": ""}\n'
    else
        printf '{"text": "...", "tooltip": "Show Tray"}\n'
    fi
}

# Run immediately on start so the bar isn't empty while waiting for the first event
check_tray

# Start monitoring DBus for Register/Unregister events
# --line-buffered is critical so grep passes the trigger immediately
busctl --user monitor org.kde.StatusNotifierWatcher --json=short \
    | grep --line-buffered -E "StatusNotifierItemRegistered|StatusNotifierItemUnregistered" \
    | while read -r _; do
        # When an event is detected, re-run the check
        check_tray
    done
