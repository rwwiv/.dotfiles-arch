{
  "reload_style_on_change": true,
  "layer": "top",
  "position": "top",
  "spacing": 0,
  "height": 32,
  "margin": 6,
  "modules-left": ["custom/omarchy", "hyprland/workspaces"],
  "modules-right": [
    "group/tray-expander",
    "bluetooth",
    "network",
    "wireplumber#microphone",
    "wireplumber#volume",
    "battery",
    "idle_inhibitor",
    "clock",
    "custom/update",
    "custom/screenrecording-indicator"
  ],

  // ============================================
  // Hyprland Modules
  // ============================================
  "hyprland/workspaces": {
    "cursor": true,
    "format": "{icon}",
    "format-icons": {
      "1": "一",
      "2": "二",
      "3": "三",
      "4": "四",
      "5": "五",
      "6": "六",
      "7": "七",
      "8": "八",
      "9": "九",
      "10": "〇",
      "default": "余"
    },
    "on-click": "activate",
    "persistent-workspaces": {
      "*": 10
    }
  },
  "hyprland/window": {
    "max-length": 120,
    "rewrite": {
      "(.*) - Chromium": "$1",
      "(.*) - Mozilla Firefox": "$1",
    },
    "separate-outputs": true
  },

  // ============================================
  // Clock
  // ============================================
  "clock": {
    "format": "{:%I:%M%p}",
    "on-click-right": "omarchy-launch-floating-terminal-with-presentation omarchy-tz-select",
    "tooltip": true,
    "tooltip-format": "{:%B %d, %Y}"
  },

  // ============================================
  // System Modules
  // ============================================
  "battery": {
    "format-charging": "bat:{capacity}% 󱐋",
    "format-discharging": "bat:{capacity}%",
    "format-plugged": "AC",
    "interval": 5,
    "on-click": "omarchy-menu power",
    "states": {
      "critical": 10,
      "warning": 20
    },
    "tooltip-format-charging": "{capacity}% | {power:>1.0f}W↑ | {time} to full",
    "tooltip-format-discharging": "{capacity}% | {power:>1.0f}W↓ | {time} to empty"
  },
  "bluetooth": {
    "format": "bt:{status}",
    "on-click": "xdg-terminal-exec --app-id=com.rwwiv.Bluetui -e launch-bluetui",
    "tooltip-format-connected": "Devices connected: {num_connections}\n{device_enumerate}",
    "tooltip-format-on": "No devices connected",
    "tooltip-off": false
  },
  "network": {
    "format": "{ifname}",
    "format-disconnected": "{ifname}:沒",
    "format-ethernet": "{ifname}:{ipaddr}",
    "format-wifi": "{ifname}:{signalStrength}%",
    "interval": 3,
    "on-click": "omarchy-launch-wifi",
    "spacing": 1,
    "tooltip-format-disconnected": "Disconnected",
    "tooltip-format-ethernet": "⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
    "tooltip-format-wifi": "{essid} ({frequency} GHz)\n⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}"
  },
  "wireplumber#microphone": {
    "format": "mic:{source_volume}%",
    "format-muted": "mic:muted",
    "node-type": "Audio/Source",
    "on-click": "xdg-terminal-exec --app-id=com.omarchy.Wiremix -e wiremix -v recording",
    "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
    "tooltip-format": "{source_desc}"
  },
  "wireplumber#volume": {
    "format": "vol:{volume}%",
    "format-muted": "vol:muted",
    "on-click": "xdg-terminal-exec --app-id=com.omarchy.Wiremix -e wiremix",
    "on-click-right": "pamixer -t",
    "scroll-step": 0,
    "tooltip-format": "{node_name}"
  },

  // ============================================
  // Idle Inhibitor
  // ============================================
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "",
      "deactivated": ""
    }
  },

  // ============================================
  // Tray & Expander
  // ============================================
  "group/tray-expander": {
    "drawer": {
      "children-class": "tray-group-item",
      "click-to-reveal": true,
      "transition-duration": 200
    },
    "modules": ["custom/expand-icon", "tray"],
    "orientation": "inherit"
  },
  "tray": {
    "cursor": true,
    "icon-size": 12,
    "spacing": 17
  },

  // ============================================
  // Custom Modules
  // ============================================
  "custom/expand-icon": {
    "cursor": true,
    "format": "...",
    "tooltip": false
  },
  "custom/omarchy": {
    "format": "<span font='omarchy'>\ue900</span>",
    "on-click": "omarchy-menu",
    "on-click-right": "xdg-terminal-exec",
    "tooltip-format": "Omarchy Menu\n\nSuper + Alt + Space"
  },
  "custom/screenrecording-indicator": {
    "exec": "$OMARCHY_PATH/default/waybar/indicators/screen-recording.sh",
    "on-click": "omarchy-cmd-screenrecord",
    "return-type": "json",
    "signal": 8
  },
  "custom/update": {
    "exec": "omarchy-update-available",
    "format": "",
    "interval": 3600,
    "on-click": "omarchy-launch-floating-terminal-with-presentation omarchy-update",
    "signal": 7,
    "tooltip-format": "Omarchy update available"
  }
}
